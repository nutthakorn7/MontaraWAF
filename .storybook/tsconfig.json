{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "strict": true
    },
    "include": [
        "../src/**/*.stories.tsx",
        "../src/**/*.stories.ts",
        "../src/components/**/*.tsx",
        "../src/stories/**/*.ts",
        "../src/stories/**/*.tsx",
        "./*.ts",
        "./*.tsx"
    ],
    "exclude": [
        "../node_modules"
    ]
}